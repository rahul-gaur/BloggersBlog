<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="?attr/cardBackgroundColorDefault"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/grid_item_imageView"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginBottom="2dp"
        android:layout_marginEnd="2dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="2dp"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:color/darker_gray"
        android:contentDescription="@string/app_name" />

    <ProgressBar
        android:id="@+id/grid_item_progressBar"
        style="@style/Widget.AppCompat.ProgressBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        app:layout_constraintBottom_toBottomOf="@+id/grid_item_imageView"
        app:layout_constraintEnd_toEndOf="@+id/grid_item_imageView"
        app:layout_constraintStart_toStartOf="@+id/grid_item_imageView"
        app:layout_constraintTop_toTopOf="@+id/grid_item_imageView"
        tools:visibility="invisible" />
</android.support.constraint.ConstraintLayout>