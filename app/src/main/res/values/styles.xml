<resources>

    <!-- Base application theme. -->
    <!-- Light application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="searchBackground">@color/white</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackground">@color/white</item>
        <item name="primaryLightColor">@color/primaryLightColor</item>
        <item name="secondaryLightColor">@color/secondaryLightColor</item>
        <item name="secondaryDarkColor">@color/secondaryDarkColor</item>
        <item name="primaryTextColor">@color/primaryTextColor</item>
        <item name="secondaryTextColor">@color/secondaryTextColor</item>
        <item name="white">@color/white</item>
        <item name="black">@color/black</item>
        <item name="hintColor">@color/hintColor</item>
        <item name="cardBackgroundColorDefault">@color/white</item>
        <item name="bottomNevBarColor">@color/white</item>
        <item name="android:itemBackground">@color/white</item>
        <item name="android:itemTextAppearance">@color/black</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimation</item>
        <item name="pbOrange">@color/pbOrange</item>
        <item name="pbPurple">@color/pbPurple</item>
        <item name="pbPink">@color/pbPink</item>
        <item name="pbRed">@color/pbRed</item>
        <item name="pbBlue">@color/pbBlue</item>
        <item name="pbGreen">@color/pbGreen</item>
    </style>

    <!-- Dark application theme. -->
    <style name="darkTheme" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="searchBackground">@color/colorPrimaryDark</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorBackground">@color/black</item>
        <item name="primaryLightColor">@color/primaryLightColor</item>
        <item name="secondaryLightColor">@color/secondaryDarkColor</item>
        <item name="secondaryDarkColor">@color/secondaryDarkColor</item>
        <item name="primaryTextColor">@color/hintColor</item>
        <item name="secondaryTextColor">@color/hintColor</item>
        <item name="white">@color/black</item>
        <item name="black">@color/white</item>
        <item name="hintColor">@color/hintColor</item>
        <item name="android:popupBackground">@color/black</item>
        <item name="bottomNevBarColor">@color/black</item>
        <item name="cardBackgroundColorDefault">@color/colorPrimaryDark</item>
        <item name="android:windowAnimationStyle">@style/WindowAnimation</item>
        <item name="pbOrange">@color/pbOrange</item>
        <item name="pbPurple">@color/pbPurple</item>
        <item name="pbPink">@color/pbPink</item>
        <item name="pbRed">@color/pbRed</item>
        <item name="pbBlue">@color/pbBlue</item>
        <item name="pbGreen">@color/pbGreen</item>
    </style>

    <style name="popUpThemeLight" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/black</item>
        <item name="android:itemBackground">@color/white</item>
    </style>

    <style name="popUpThemeDark" parent="Widget.AppCompat.PopupMenu">
        <item name="android:textColor">@color/hintColor</item>
        <item name="android:itemBackground">@color/black</item>
    </style>

    <!-- Transition of window -->
    <style name="WindowAnimation">
        <item name="android:windowEnterAnimation">@android:anim/fade_in</item>
        <item name="android:windowExitAnimation">@android:anim/fade_out</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="profile_Background_theme_red_dark" parent="darkTheme">
        <item name="gradColor">@color/pbRed</item>
        <item name="android:src">@drawable/profile_grad</item>
    </style>

    <style name="profile_Background_theme_orange_dark" parent="darkTheme">
        <item name="android:src">@drawable/profile_grad</item>
        <item name="gradColor">@color/pbOrange</item>
    </style>

    <style name="profile_Background_theme_Purple_dark" parent="darkTheme">
        <item name="android:src">@drawable/profile_grad</item>
        <item name="gradColor">@color/pbPurple</item>
    </style>

    <style name="profile_Background_theme_Pink_dark" parent="darkTheme">
        <item name="android:src">@drawable/profile_grad</item>
        <item name="gradColor">@color/pbPink</item>
    </style>

    <style name="profile_Background_theme_Blue_dark" parent="darkTheme">
        <item name="android:src">@drawable/profile_grad</item>
        <item name="gradColor">@color/pbBlue</item>
    </style>

    <style name="profile_Background_theme_Green_dark" parent="darkTheme">
        <item name="android:src">@drawable/profile_grad</item>
        <item name="gradColor">@color/pbGreen</item>
    </style>

    <style name="profile_Background_theme_Default_dark" parent="darkTheme">
        <item name="android:src">@drawable/profile_grad</item>
        <item name="gradColor">@color/pbBlue</item>
    </style>

    <style name="profile_Background_theme_red" parent="AppTheme">
        <item name="gradColor">@color/pbRed</item>
        <item name="android:src">@drawable/profile_grad</item>
    </style>

    <style name="profile_Background_theme_orange" parent="AppTheme">
        <item name="android:src">@drawable/profile_grad</item>
        <item name="gradColor">@color/pbOrange</item>
    </style>

    <style name="profile_Background_theme_Purple" parent="AppTheme">
        <item name="android:src">@drawable/profile_grad</item>
        <item name="gradColor">@color/pbPurple</item>
    </style>

    <style name="profile_Background_theme_Pink" parent="AppTheme">
        <item name="android:src">@drawable/profile_grad</item>
        <item name="gradColor">@color/pbPink</item>
    </style>

    <style name="profile_Background_theme_Blue" parent="AppTheme">
        <item name="android:src">@drawable/profile_grad</item>
        <item name="gradColor">@color/pbBlue</item>
    </style>

    <style name="profile_Background_theme_Green" parent="AppTheme">
        <item name="android:src">@drawable/profile_grad</item>
        <item name="gradColor">@color/pbGreen</item>
    </style>

    <style name="profile_Background_theme_Default" parent="AppTheme">
        <item name="android:src">@drawable/profile_grad</item>
        <item name="gradColor">@color/pbBlue</item>
    </style>

</resources>